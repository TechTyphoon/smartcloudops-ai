# SmartCloudOps AI - Deployment Configuration
# Copy this file to .env.deployment and customize for your environment

# Server Configuration
APP_SERVER=44.253.225.44
MONITORING_SERVER=54.186.188.202

# SSH Configuration
KEY_FILE=~/.ssh/smartcloudops-ai-key.pem
SSH_USER=ec2-user

# Docker Configuration
IMAGE_NAME=smartcloudops-ai:latest
DOCKER_REGISTRY=

# AWS Configuration
AWS_REGION=us-west-2
AWS_PROFILE=default

# Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Port Configuration
APP_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
NODE_EXPORTER_PORT=9100
REDIS_PORT=6379
POSTGRES_PORT=5434

# Application Configuration
LOG_LEVEL=INFO
DATABASE_URL=postgresql://smartcloudops:password@localhost:5434/smartcloudops
REDIS_URL=redis://localhost:6379/0

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
ADMIN_PASSWORD=admin123
GRAFANA_ADMIN_PASSWORD=admin

# Monitoring Configuration
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_STORAGE_PATH=/var/lib/grafana
METRICS_SCRAPE_INTERVAL=15s

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/smartcloudops

# Notification Configuration
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
