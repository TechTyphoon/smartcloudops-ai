# SmartCloudOps AI - Secure Environment Configuration
# SECURITY: This file contains production-ready secure defaults
# Copy this to .env and customize for your environment

# Flask Application Configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security Configuration (PRODUCTION REQUIRED)
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
FLASK_SECRET_KEY=your-super-secret-key-minimum-32-characters-long-random-string-change-this
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
ENABLE_CSRF_PROTECTION=true
MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=30

# ChatOps AI Provider Configuration
# SECURITY: Use AWS SSM Parameter Store in production
AI_PROVIDER=auto
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
METRICS_PORT=9090

# Database Configuration (Use environment variables)
POSTGRES_USER=cloudops
POSTGRES_PASSWORD=secure-password-change-this
POSTGRES_DB=cloudops
DATABASE_URL=postgresql+psycopg://cloudops:secure-password-change-this@postgres:5432/cloudops

# Database Connection Pooling
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Notifications
SENDER_EMAIL=alerts@smartcloudops.ai
ADMIN_EMAILS=admin@smartcloudops.ai
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Security / Remediation
REQUIRE_APPROVAL=true
MAX_ACTIONS_PER_HOUR=10
COOLDOWN_MINUTES=5
REMEDIATION_TAG_KEY=Name
REMEDIATION_TAG_VALUE=smartcloudops-ai-application
SSM_SERVICE_NAME=smartcloudops-app
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# ML Model Configuration
ML_MODEL_PATH=ml_models/models/anomaly_model.pkl
ML_FEATURE_COUNT=18
ML_RETRAIN_INTERVAL_HOURS=24
ML_VALIDATION_THRESHOLD=0.85

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ENABLE_JSON_LOGGING=true
LOG_FILE=logs/app.log
