[flake8]
max-line-length = 127
max-complexity = 10
extend-ignore = E402
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    smartcloudops_env,
    .formatvenv,
    venv/,
    env/,
    ENV/,
    env.bak/,
    venv.bak/,
    build,
    dist,
    *.egg-info,
    backups/,
    logs/
per-file-ignores =
    app/main.py:E402
    app/remediation/engine.py:E402
    scripts/one-time/*:F401
    scripts/start_app.py:F401 