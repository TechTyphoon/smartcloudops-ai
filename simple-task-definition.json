{
  "family": "smartcloudops-ai-task",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::696605743960:role/smartcloudops-ai-ecs-exec-role",
  "taskRoleArn": "arn:aws:iam::696605743960:role/smartcloudops-ai-ecs-exec-role",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "696605743960.dkr.ecr.us-west-2.amazonaws.com/smartcloudops-ai-app:latest",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {"name": "FLASK_ENV", "value": "production"},
        {"name": "FLASK_PORT", "value": "3000"},
        {"name": "DEBUG", "value": "False"},
        {"name": "LOG_LEVEL", "value": "INFO"},
        {"name": "PROMETHEUS_ENABLED", "value": "true"},
        {"name": "PROMETHEUS_PORT", "value": "9090"},
        {"name": "MODEL_PATH", "value": "./ml_models/"},
        {"name": "ENABLE_ML_FEATURES", "value": "true"},
        {"name": "BCRYPT_LOG_ROUNDS", "value": "12"},
        {"name": "APP_HOST", "value": "0.0.0.0"},
        {"name": "SECRET_KEY", "value": "smartcloudops-ai-production-secret-key-2024"},
        {"name": "JWT_SECRET_KEY", "value": "smartcloudops-ai-jwt-secret-key-2024"},
        {"name": "AUTH_SECRET_KEY", "value": "smartcloudops-ai-auth-secret-key-2024"},
        {"name": "OPENAI_API_KEY", "value": "sk-demo-key-for-testing"},
        {"name": "GEMINI_API_KEY", "value": "demo-gemini-key-for-testing"},
        {"name": "DATABASE_URL", "value": "postgresql://postgres:password@localhost:5432/smartcloudops"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/smartcloudops-ai-app",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
