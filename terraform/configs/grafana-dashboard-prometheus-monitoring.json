{
  "dashboard": {
    "id": null,
    "title": "Smart CloudOps AI - Prometheus Monitoring",
    "tags": ["smartcloudops", "prometheus", "monitoring"],
    "timezone": "browser",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Prometheus Targets Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up",
            "refId": "A",
            "legendFormat": "{{instance}} - {{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Prometheus Scrape Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "prometheus_target_scrape_duration_seconds",
            "refId": "A",
            "legendFormat": "{{instance}} - {{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "Prometheus TSDB Head Samples",
        "type": "timeseries",
        "targets": [
          {
            "expr": "prometheus_tsdb_head_samples_appended_total",
            "refId": "A",
            "legendFormat": "Samples Appended"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 4,
        "title": "Flask Application Requests",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(flask_requests_total[5m])",
            "refId": "A",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Flask Request Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flask_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(flask_request_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  },
  "overwrite": true
}