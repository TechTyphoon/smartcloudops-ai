{
  "dashboard": {
    "id": null,
    "title": "Smart CloudOps AI - ML Anomaly Detection",
    "tags": ["cloudops", "ml", "anomaly"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Anomalies Detected",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(flask_ml_anomalies_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "ML Predictions Made",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(flask_ml_predictions_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Anomaly Detection Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(flask_ml_anomalies_total) / sum(flask_ml_predictions_total)) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 25}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "System Load vs Anomalies",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_load1",
            "refId": "A",
            "legendFormat": "Load Average"
          },
          {
            "expr": "increase(flask_ml_anomalies_total[5m])",
            "refId": "B",
            "legendFormat": "New Anomalies (5m)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Anomaly Detection Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(flask_ml_anomalies_total[5m])",
            "refId": "A",
            "legendFormat": "Anomalies per second"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "schemaVersion": 30,
    "version": 1
  },
  "overwrite": true
}
