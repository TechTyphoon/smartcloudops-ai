# SmartCloudOps AI - Environment Configuration Template
# Copy this file to .env and customize for your environment
# 
# This template combines secure defaults with comprehensive configuration options
# for development, staging, and production environments.

#============================================================================
# ENVIRONMENT & FLASK CONFIGURATION
#============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

#============================================================================
# SECURITY CONFIGURATION
#============================================================================
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-secure-32-char-key
JWT_SECRET_KEY=change-this-to-secure-jwt-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Security Headers (Enable in production)
SECURITY_HEADERS_ENABLED=false
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
SECURE_COOKIES=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

#============================================================================
# DATABASE CONFIGURATION
#============================================================================
# Development Database (SQLite)
DATABASE_URL=sqlite:///./smartcloudops.db

# Production Database (PostgreSQL)
# DATABASE_URL=postgresql+psycopg://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=smartcloudops
# DB_USERNAME=cloudops
# DB_PASSWORD=secure-password-change-this

# Database Connection Pooling
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

#============================================================================
# REDIS CONFIGURATION
#============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379/0

#============================================================================
# AI/ML CONFIGURATION
#============================================================================
AI_PROVIDER=auto
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=500
GEMINI_TEMPERATURE=0.3

# Enhanced ML Features
ENABLE_ENHANCED_ANOMALY=true
ENABLE_MULTI_METRIC_CORRELATION=true
ENABLE_FAILURE_PREDICTION=true
ENABLE_ANOMALY_EXPLANATION=true

# ML Model Configuration
ML_MODEL_PATH=ml_models/models/anomaly_model.pkl
ML_FEATURE_COUNT=18
ML_RETRAIN_INTERVAL_HOURS=24
ML_VALIDATION_THRESHOLD=0.85

#============================================================================
# MONITORING CONFIGURATION
#============================================================================
PROMETHEUS_URL=http://localhost:9090
METRICS_PORT=9090
PROMETHEUS_RETENTION_DAYS=15
METRICS_SCRAPE_INTERVAL=15s

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_STORAGE_PATH=/var/lib/grafana

#============================================================================
# AWS CONFIGURATION
#============================================================================
AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# Use IAM roles instead of access keys when possible

#============================================================================
# REMEDIATION CONFIGURATION
#============================================================================
REQUIRE_APPROVAL=true
MAX_ACTIONS_PER_HOUR=10
COOLDOWN_MINUTES=5
REMEDIATION_TAG_KEY=Name
REMEDIATION_TAG_VALUE=smartcloudops-ai-application
SSM_SERVICE_NAME=smartcloudops-app

#============================================================================
# LOGGING CONFIGURATION
#============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ENABLE_JSON_LOGGING=false

#============================================================================
# CORS CONFIGURATION
#============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

#============================================================================
# NOTIFICATION CONFIGURATION
#============================================================================
SENDER_EMAIL=alerts@smartcloudops.ai
ADMIN_EMAILS=admin@smartcloudops.ai
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Email Configuration
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

#============================================================================
# PERFORMANCE CONFIGURATION
#============================================================================
MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

#============================================================================
# BACKUP CONFIGURATION
#============================================================================
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/smartcloudops

#============================================================================
# CONTAINER & DEPLOYMENT CONFIGURATION
#============================================================================
CONTAINER_RUNTIME=docker
ORCHESTRATION=docker-compose
ENVIRONMENT=development

