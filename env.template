# SmartCloudOps AI Environment Configuration Template
# Copy this file to .env and fill in your values

# Flask Application Configuration
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_ENV=development

# AI Provider Configuration
AI_PROVIDER=auto  # "openai", "gemini", or "auto"
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Email Notification Configuration (AWS SES)
SENDER_EMAIL=alerts@smartcloudops.ai
ADMIN_EMAILS=dileepkumarreddy12345@gmail.com

# Beta Testing Configuration
S3_BUCKET_NAME=smartcloudops-beta-data

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3004
NODE_EXPORTER_PORT=9100

# ML Model Configuration
ML_MODEL_PATH=ml_models/models/anomaly_detector.pkl
ML_FEATURE_COUNT=18

# Security Configuration
MAX_ACTIONS_PER_HOUR=10
REMEDIATION_COOLDOWN_MINUTES=5 