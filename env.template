# Smart CloudOps AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Application Configuration
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=3000
FLASK_ENV=development

# AI Provider Configuration
AI_PROVIDER=auto
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3

GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=500
GEMINI_TEMPERATURE=0.3

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Monitoring Configuration
METRICS_PORT=9090
PROMETHEUS_URL=http://localhost:9090

# Remediation Configuration
REQUIRE_APPROVAL=false
MAX_ACTIONS_PER_HOUR=10
COOLDOWN_MINUTES=5
REMEDIATION_TAG_KEY=Name
REMEDIATION_TAG_VALUE=smartcloudops-ai-application
SSM_SERVICE_NAME=smartcloudops-app

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# ML Configuration
ML_MODEL_PATH=ml_models/models/anomaly_model.pkl
ML_CONFIG_PATH=ml_models/config.yaml 