# SmartCloudOps AI Environment Configuration Template
# SECURITY: Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets to version control

# Flask Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
# Standardized port across all environments
FLASK_PORT=3003

# Security Configuration (PRODUCTION REQUIRED)
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
FLASK_SECRET_KEY=your-super-secret-key-minimum-32-characters-long-random-string
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
ENABLE_CSRF_PROTECTION=true
MAX_CONTENT_LENGTH=16777216  # 16MB
REQUEST_TIMEOUT=30

# ChatOps AI Provider Configuration
# SECURITY: Use AWS SSM Parameter Store in production
AI_PROVIDER=auto  # "openai", "gemini", or "auto"
OPENAI_API_KEY=
GEMINI_API_KEY=

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
METRICS_PORT=9090

# Persistent Database Configuration
# For local/dev using docker-compose Postgres
# SECURITY: Use SSL and connection pooling in production
DATABASE_URL=postgresql+psycopg2://cloudops:cloudops@localhost:5432/cloudops
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# AWS Configuration
AWS_REGION=ap-south-1
# SECURITY: NEVER use access keys in production - use IAM roles
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Notifications (AWS SES + Slack)
SENDER_EMAIL=alerts@smartcloudops.ai
ADMIN_EMAILS=admin@smartcloudops.ai
SLACK_WEBHOOK_URL=

# Security / Remediation
REQUIRE_APPROVAL=false  # Set to true in production
MAX_ACTIONS_PER_HOUR=10
COOLDOWN_MINUTES=5
REMEDIATION_TAG_KEY=Name
REMEDIATION_TAG_VALUE=smartcloudops-ai-application
SSM_SERVICE_NAME=smartcloudops-app
# ENABLE_RATE_LIMITING=true  # Enable in production
# MAX_REQUESTS_PER_MINUTE=100

# ML Model Configuration
ML_MODEL_PATH=ml_models/models/anomaly_model.pkl
ML_FEATURE_COUNT=18
