# SmartCloudOps AI Environment Configuration Template
# Copy this file to .env and fill in your values

# Flask Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
# Inside the container/app the app listens on 3000; in dev we map 3003:3000
FLASK_PORT=3003

# ChatOps AI Provider Configuration
AI_PROVIDER=auto  # "openai", "gemini", or "auto"
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
METRICS_PORT=9090

# Persistent Database Configuration
# For local/dev using docker-compose Postgres
DATABASE_URL=postgresql+psycopg2://cloudops:cloudops@localhost:5432/cloudops

# AWS Configuration
AWS_REGION=ap-south-1
# Leave keys empty â€“ use IAM roles in production. For local testing only.
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Notifications (AWS SES + Slack)
SENDER_EMAIL=alerts@smartcloudops.ai
ADMIN_EMAILS=your_email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Security / Remediation
REQUIRE_APPROVAL=false
MAX_ACTIONS_PER_HOUR=10
COOLDOWN_MINUTES=5
REMEDIATION_TAG_KEY=Name
REMEDIATION_TAG_VALUE=smartcloudops-ai-application
SSM_SERVICE_NAME=smartcloudops-app

# ML Model Configuration
ML_MODEL_PATH=ml_models/models/anomaly_model.pkl
ML_FEATURE_COUNT=18
