# SmartCloudOps AI - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# API Configuration
API_BASE_URL=http://localhost:5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_USER=cloudops
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=cloudops
DATABASE_URL=postgresql+psycopg://cloudops:your_secure_postgres_password@postgres:5432/cloudops

# Database Pool Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_DEFAULT_REGION=ap-south-1

# AWS Services
AWS_CLOUDWATCH_NAMESPACE=SmartCloudOps
AWS_SSM_SERVICE_NAME=smartcloudops-app

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400
JWT_ALGORITHM=HS256

# Password Security
BCRYPT_LOG_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_SUPPORTS_CREDENTIALS=true
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# Security Headers
SECURITY_HEADERS_ENABLED=true
RATE_LIMIT_ENABLED=true
CACHE_ENABLED=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Configuration
PROMETHEUS_URL=http://prometheus:9090
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Node Exporter Configuration
NODE_EXPORTER_PORT=9100

# =============================================================================
# REMEDIATION CONFIGURATION
# =============================================================================

# Remediation Settings
REQUIRE_APPROVAL=false
MAX_ACTIONS_PER_HOUR=3
COOLDOWN_MINUTES=10
REMEDIATION_TAG_KEY=Name
REMEDIATION_TAG_VALUE=smartcloudops-ai-application

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Webhook URLs
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Service Toggles
DISABLE_AWS_SERVICES=false
DISABLE_ELASTICSEARCH=true
USE_LOCAL_STORAGE=true

# ML Feature Toggles
ENABLE_ANOMALY_DETECTION=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_AUTO_REMEDIATION=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Settings
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=admin@yourcompany.com

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom Settings
CUSTOM_KEY=your_custom_value
ENVIRONMENT=production
VERSION=1.0.0

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# =============================================================================
# SECRETS (DO NOT COMMIT THESE TO VERSION CONTROL)
# =============================================================================

# Application Secrets
SECRET_KEY=your_secret_key_here
DATABASE_PASSWORD=your_database_password_here
REDIS_PASSWORD=your_redis_password_here
API_KEYS=your_api_keys_here
