# SmartCloudOps AI - Environment Configuration Example
# 
# SECURITY: Copy this file to .env and replace all placeholders with secure values
# NEVER commit .env file to version control
#
# Generate secure secrets using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

#============================================================================
# SECURITY CONFIGURATION (REQUIRED - NO DEFAULTS)
#============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_USE_SECURE_32_CHAR_MIN_KEY_REQUIRED
JWT_SECRET_KEY=CHANGE_THIS_USE_DIFFERENT_SECURE_32_CHAR_KEY_REQUIRED
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Admin credentials (minimum 16 characters)
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_USE_SECURE_PASSWORD_MIN_16_CHARS
DEFAULT_ADMIN_EMAIL=admin@your-domain.com

#============================================================================
# DATABASE CONFIGURATION (REQUIRED)
#============================================================================
DB_HOST=CHANGE_THIS_TO_YOUR_DB_HOST
DB_PORT=5432
DB_NAME=smartcloudops
DB_USERNAME=CHANGE_THIS_TO_SECURE_USERNAME
DB_PASSWORD=CHANGE_THIS_USE_SECURE_PASSWORD_MIN_16_CHARS
DATABASE_URL=postgresql+psycopg://\${DB_USERNAME}:\${DB_PASSWORD}@\${DB_HOST}:\${DB_PORT}/\${DB_NAME}?sslmode=require

#============================================================================
# REDIS CONFIGURATION (REQUIRED)
#============================================================================
REDIS_HOST=CHANGE_THIS_TO_YOUR_REDIS_HOST
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_USE_SECURE_PASSWORD_MIN_16_CHARS

#============================================================================
# AI SERVICES (REQUIRED)
#============================================================================
OPENAI_API_KEY=CHANGE_THIS_USE_YOUR_OPENAI_API_KEY
GEMINI_API_KEY=CHANGE_THIS_IF_USING_GEMINI

#============================================================================
# MONITORING
#============================================================================
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_USE_SECURE_PASSWORD_MIN_16_CHARS

#============================================================================
# AWS (PRODUCTION)
#============================================================================
AWS_REGION=us-east-1
AWS_SECRETS_MANAGER_PREFIX=/smartcloudops/production/
