# Environment configuration for SmartCloudOps AI
# This is a template file - copy to .env and customize for your environment

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False
FLASK_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smartcloudops

# ML Model Configuration
MODEL_PATH=./ml_models/
ENABLE_ML_FEATURES=true

# API Keys (set these in your actual .env file)
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
BCRYPT_LOG_ROUNDS=12

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/smartcloudops.log

# Security Configuration (REQUIRED)
AUTH_SECRET_KEY=your-auth-secret-key-change-this-in-production
APP_HOST=0.0.0.0

